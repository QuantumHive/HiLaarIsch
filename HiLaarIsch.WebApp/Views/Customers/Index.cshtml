@using HiLaarIsch.Contract.DTOs
@model CustomerView[]

<div class="page-header">
    <a class="btn btn-success pull-right" role="button" href="customers/new">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
    <h3 class="text-center">Klanten</h3>
</div>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var item in Model.OrderBy(m => m.Firstname).ThenBy(m => m.Surname))
        {
            <li class="list-group-item">@item.Firstname @item.Surname</li>
        }
    </ul>
}
else
{
    <div class="alert alert-danger" role="alert">No results</div>
}