@using HiLaarIsch.Contract.DTOs
@model CustomerModel

<form action="/customers/edit" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id)
    @Html.EditorForModel()

    <button type="submit" class="btn btn-primary btn-lg btn-block">Klant wijzigen</button>
</form>

@section commands
{
    @Html.Partial(Partials.Commands.Back, "customers")
}

@section scripts
{
    <script>
        $(function ()
        {
            var grouplevel = @((int)Model.GroupLevel);
            $("input[name='@nameof(CustomerModel.GroupLevel)'][value='"+grouplevel+"']")
                .closest("label.btn")
                .trigger("click");
        });
    </script>
}