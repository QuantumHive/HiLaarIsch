@using HiLaarIsch.Contract.DTOs
@model CustomerModel

<fieldset>
    <legend>Klant gegevens</legend>

    <div class="form-group">
        <label for="first-name" class="hidden-xs col-sm-2 control-label">Voornaam</label>
        <div class="col-xs-12 col-sm-10">
            <input name="firstname" type="text" class="form-control" id="first-name" placeholder="Voornaam" value="@Model.Firstname">
        </div>
    </div>

    <div class="form-group">
        <label for="sur-name" class="hidden-xs col-sm-2 control-label">Achternaam</label>
        <div class="col-xs-12 col-sm-10">
            <input name="surname" type="text" class="form-control" id="sur-name" placeholder="Achternaam" value="@Model.Surname">
        </div>
    </div>

    <div class="form-group">
        <div class="btn-group btn-group-justified" data-toggle="buttons">
            <label class="btn btn-default active">
                <input type="radio" name="options" id="shetland-class" autocomplete="off" checked> Shetten les
            </label>
            <label class="btn btn-default">
                <input type="radio" name="options" id="children-class" autocomplete="off"> Kinder les
            </label>
            <label class="btn btn-default">
                <input type="radio" name="options" id="adult-class" autocomplete="off"> Volwassen les
            </label>
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>Gebruiker gegevens</legend>

    <div class="form-group">
        <label for="email" class="hidden-xs col-sm-2 control-label">E-mail</label>
        <div class="col-xs-12 col-sm-10">
            <input name="email" type="email" class="form-control" id="email" placeholder="E-mail" value="@Model.Email">
        </div>
    </div>
</fieldset>