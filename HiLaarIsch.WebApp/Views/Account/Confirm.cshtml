@using HiLaarIsch.Models
@model ResetPasswordViewModel

<div class="page-header text-center">
    <h2 >Activeer je account</h2>
</div>

<p class="text-center lead">Stel hier je wachtwoord in om daarna in te kunnen loggen op HiLaarIsch.</p>

<form action="/account/confirm" method="post" class="form-login">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.MailToken)

    <div class="form-group">
        <input name="@nameof(ResetPasswordViewModel.NewPassword)" type="password" class="input-lg form-control"
               id="new-password" placeholder="Wachtwoord" autocomplete="off" required>
    </div>
    <div class="form-group">
        <input name="@nameof(ResetPasswordViewModel.ConfirmPassword)" type="password" class="input-lg form-control"
               id="confirm-password" placeholder="Herhaal wachtwoord" autocomplete="off" required>
    </div>

    <button type="submit" class="btn btn-primary btn-block btn-lg">Account activeren</button>
</form>
